{
    "name": "typeorm-fluent-migrator",
    "version": "0.0.2",
    "description": "Enhanced migrator for TypeORM with fluent-style migration capabilities (批量迁移、自定义回滚、迁移策略等)",
    "homepage": "https://github.com/qianfeiqianlan/typeorm-fluent-migrator#readme",
    "bugs": {
        "url": "https://github.com/qianfeiqianlan/typeorm-fluent-migrator/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/qianfeiqianlan/typeorm-fluent-migrator.git"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "build": "tsup",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "spellcheck": "cspell \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "spellcheck:fix": "cspell \"**/*.{ts,tsx,js,jsx,json,md}\" --no-must-find-files",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "typeorm",
        "typeorm-migration",
        "migrator",
        "fluent",
        "database-migration",
        "typescript",
        "orm"
    ],
    "author": "Eric Li <yayli1218@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=16.0.0"
    },
    "peerDependencies": {
        "typeorm": "^0.3.0 || ^0.2.0",
        "typescript": "^4.5.0 || ^5.0.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "@vitest/coverage-v8": "^4.0.17",
        "better-sqlite3": "^12.6.0",
        "cspell": "^9.6.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.7.4",
        "tsup": "^8.5.1",
        "typeorm": "^0.3.20",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    }
}
